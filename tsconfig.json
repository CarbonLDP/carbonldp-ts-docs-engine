{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2015",
    "lib": [ "es2015", "dom" ],
    "strict": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "declaration": true,
    "types": [ "node", "prismjs", "marked", "nunjucks" ],
    "outDir": "dist/"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}